
<div class="input-student ">
    <label>Ф.И.О студента</label>
    <input required type="text" pattern="^[a-zA-Z\s]*$" class="form-control" placeholder="" name="Name" />
</div>

<div class="input-student ">
    <label>Группа</label>
    <input required type="text" class="form-control" placeholder="" name="Groupe" />
</div>

<div class="input-student ">
    <label>Форма обучения</label>
    <input required type="text" pattern="^[a-zA-Z\s]*$" class="form-control" placeholder="" name="FormOfStudy" />
</div>

<div class="input-student ">
    <label>Статус стипендии</label>
    <input required type="text" pattern="^[a-zA-Z\s]*$" class="form-control" placeholder="" name="ScholarshipStatus" />
</div>

<div class="input-student ">
    <label>Семейный статус</label>
    <input required type="text" pattern="^[a-zA-Z\s]*$" class="form-control" placeholder="" name="FamilyStatus" />
</div>

<div class="input-student ">
    <label>Призывной статус</label>
    <input required type="text" pattern="^[a-zA-Z\s]*$" class="form-control" placeholder="" name="MilitaryStatus" />
</div>

<div class="input-student ">
    <label>Школа</label>
    <input required type="text" class="form-control" placeholder="" name="School" />
</div>

<div class="input-student ">
    <label>Ф.И.О отца</label>
    <input required type="text" pattern="^[a-zA-Z\s]*$" class="form-control" placeholder="" name="FatherName" />
</div>

<div class="input-student ">
    <label>Ф.И.О матери</label>
    <input required type="text" pattern="^[a-zA-Z\s]*$" class="form-control" placeholder="" name="MotherName" />
</div>

<div class="input-student ">
    <label>Телефонный номер</label>
    <input type="tel" class="form-control" placeholder="8-777-877-4455" name="TelNumber" pattern="[0-9]-[0-9]{3}-[0-9]{3}-[0-9]{2}[0-9]{2}" />
</div>

<div class="input-student ">
    <label>Дата рождения</label>
    <input required type="date" class="form-control" name="BornDate">
</div>

<div class="input-student ">
    <label>Дата поступления</label>
    <input required type="date" class="form-control" name="EntryDate">
</div>
<div class="input-student ">
    <label>Дата выпуска</label>
    <input type="date" class="form-control" name="GraduationDate">
</div>
